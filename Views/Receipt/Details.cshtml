@model Receipt

@{
    ViewData["Title"] = "Receipt Page Details";
}

<div class="container">

    <div class="container mt-5">
        <h2>Receipt</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"># @Model.Id</h5>
                        <p class="card-text mt-3">
                            <strong>Date:</strong> @Model.Date <br /><br />
                            <strong>Price:</strong> @Model.Price <br /><br />
                            <strong>Account Name:</strong> @Model.Account.Name <br /><br />
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <h3>Receipt Details</h3>
        <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Description:</strong><br />@Model.Description <br />

                            </p>
                        </div>
                    </div>
                </div>
        </div>
    </div>



</div>