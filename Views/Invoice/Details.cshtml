@model Invoice

@{
    ViewData["Title"] = "Invoice Page Details";
}

<div class="container">

    <div class="container mt-5">
        <h2>Invoice Header</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"># @Model.Id</h5>
                        <p class="card-text mt-3">
                            <strong>Date:</strong> @Model.Date <br /><br />
                            <strong>Pay Type:</strong> @Model.PayType <br /><br />
                            <strong>Account Name:</strong> @Model.Account.Name <br /><br />
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <h3>Invoice Details</h3>
        <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Category:</strong> @Model.Category.Name <br /><br />
                                <strong>Unit:</strong> @Model.Category.unit <br /><br />
                                <strong>Quantaty:</strong> @Model.Qty <br /><br />
                                <strong>Unit Price:</strong> @Model.UnitPrice  <br /><br />
                                <strong>TotalPrice: @Model.TotalPrice</strong> <br /><br />
                            </p>
                        </div>
                    </div>
                </div>
        </div>
    </div>



</div>