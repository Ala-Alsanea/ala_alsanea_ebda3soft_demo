@model CategoryVM
@using ala_alsanea_ebda3soft_demo.Persistent.Enums   
@using ala_alsanea_ebda3soft_demo.Persistent.ViewModel;

@{
    ViewData["Title"] = "Category Page Edit";
}

<div class=" d-flex justify-content-between m-5">
    <h1 class="display-4">Categorys </h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="display-6 text-center">Edit Category</h1>
            <form method="post" >
                <input asp-for="Id" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Category Name</label>
                    <input asp-for="Name"  type="text" class="form-control" id="name" name="name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="unit" class="form-label">Category Unit</label>  

                    @Html.DropDownList("unit",
                    Html.GetEnumSelectList<UnitType>(),
                    "Select Unit",
                    new { @class = "form-control" })

                    <span asp-validation-for="unit" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
        </div>
    </div>
</div>